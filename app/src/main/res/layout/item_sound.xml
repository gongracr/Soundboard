<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    >

  <TextView
      android:id="@+id/titleTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/two_column"
      android:layout_marginLeft="@dimen/two_column"
      android:layout_marginTop="@dimen/two_column"
      android:layout_weight="1"
      android:textColor="@color/soundlist_text_color_disabled"
      android:textSize="18sp"
      tools:text="Titulo de la frase"
      />

  <ImageView
      android:id="@+id/actionButtonImageView"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:background="?android:attr/selectableItemBackground"
      android:paddingLeft="@dimen/one_column"
      android:paddingRight="@dimen/one_column"
      android:src="@drawable/ic_keyboard_arrow_down"
      />

</LinearLayout>